<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.makotojava.android.debate"
    android:versionCode="20160328"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.makotojava.android.debate.PolicyActivity"
            android:label="@string/title_activity_policy"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.makotojava.android.debate.SpeechPagerActivity"
            android:label="@string/title_activity_speech_pager"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.makotojava.android.debate.PolicyActivity" />
        </activity>
        <activity
            android:name="com.makotojava.android.debate.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >

            <!--
          <meta-data android:name="android.support.PARENT_ACTIVITY"
            android:value="com.makotojava.android.debate.PolicyActivity"/>
            -->
        </activity>
    </application>

</manifest>